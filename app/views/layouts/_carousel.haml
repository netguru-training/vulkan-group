#carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#"}
    %li{"data-slide-to" => "1", "data-target" => "#"}
    %li{"data-slide-to" => "2", "data-target" => "#"}
  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    .item.active
      %img{:alt => "...", :src => "http://cf.ltkcdn.net/cats/images/slide/129551-850x565r1-Gray-kitten-5.jpg"}/
      .carousel-caption
    .item
      %img{:alt => "...", :src => "http://s3.amazonaws.com/rapgenius/cats-animals-kittens-background.jpg"}/
      .carousel-caption
    .item
      %img{:alt => "...", :src => "http://www.creoglassonline.co.uk/ekmps/shops/bohdan/images/cute-grey-kitten-[2]-6022-p.jpg"}/
      .carousel-caption

  / Controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
