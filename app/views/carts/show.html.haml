%h1.text-center Cart
%table.table.table-striped
  %tr
    %th Product name
    %th Quantity
    %th Price
    %th Total price
    %th
  - products.each do |product|
    %tr
      %td= link_to product.name, category_product_path(product.category_id, product)
      %td= cart.get_qty(product.id)
      %td= number_to_currency(product.price)
      %td
      %td.glyphicon.glyphicon-trash
= link_to 'Place order', new_order_path, class: 'btn btn-success'
